<Window
    x:Class="SubjectSolutionManager.Views.ActionSelectWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="200"
    Height="200"
    MinWidth="200"
    MinHeight="200"
    MaxWidth="200"
    MaxHeight="200"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <Button
            Margin="10"
            Click="OpenButtonOnClick"
            Content="Open" />
        <Button
            Margin="10"
            Click="EditButtonOnClick"
            Content="Edit" />
        <Button
            Margin="10"
            Click="DeleteButtonOnClick"
            Content="Delete" />
    </StackPanel>
</Window>
